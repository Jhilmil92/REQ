@model IEnumerable<Domain.Classes.Job>

@{
    ViewBag.Title = "Update Jobs";
}

<h2>Update Jobs</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="jobDescription">
            @Html.ActionLink(item.JobDescription, "EditJob", "Job", new {jobId = item.JobId},null)
        </td>
    </tr>
}

</table>

<div>
        @Html.ActionLink("Back to List", "TakerInformation", "Taker")
</div>
