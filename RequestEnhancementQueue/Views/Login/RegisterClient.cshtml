@model Domain.Classes.Req.Domain.ViewModels.ClientRegistrationViewModel

@{
    ViewBag.Title = "RegisterClient";
}

<h2>Register Client</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class ="header-style">Client Registration</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ClientOrganization, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClientOrganization, new { htmlAttributes = new { @class = "form-control", required = "required"} })
                @Html.ValidationMessageFor(model => model.ClientOrganization, "", new { @class = "text-danger message-color" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JoinDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JoinDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly"} })
                @Html.ValidationMessageFor(model => model.JoinDate, "", new { @class = "text-danger message-color" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "StaffInformation", "Staff", null, new { @class = "footer-style" })
</div>

<style>
    label,.message-color
    {
        color : white;
    }
    .footer-style
    {
        color : beige;
        font-weight : bold;
        font-size : large;
        text-shadow : 3px 3px 0px #000;
    }

    .header-style
    {
        color : yellow;
        font-weight : bold;
        font-size : large;
        text-shadow : 3px 3px 0px #000;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
